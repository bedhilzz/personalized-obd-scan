<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ui.ft.personalizedobdscan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.LauncherActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".views.HomeActivity" />
        <activity
            android:name=".views.AnalysisActivity"
            android:label="Analysis"
            android:parentActivityName=".views.HomeActivity"
            android:theme="@style/AppTheme">

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.HomeActivity" />
        </activity>
        <activity
            android:name=".views.maintenance.MaintenanceJournalActivity"
            android:label="Maintenance Journal"
            android:parentActivityName=".views.HomeActivity"
            android:theme="@style/AppTheme">

            <!-- The meta-data element is needed for versions lower than 4.1 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.HomeActivity" />
        </activity>
        <activity
            android:name=".views.maintenance.MaintenanceDamageListActivity"
            android:parentActivityName=".views.maintenance.MaintenanceJournalActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.maintenance.MaintenanceJournalActivity" />
        </activity>
        <activity
            android:name=".views.maintenance.JournalActivity"
            android:parentActivityName=".views.maintenance.MaintenanceDamageListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.maintenance.MaintenanceDamageListActivity" />
        </activity>
    </application>

</manifest>